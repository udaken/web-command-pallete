{
  "manifest_version": 3,
  "name": "Web Command Palette",
  "version": "1.0.0",
  "description": "A command palette for web pages.",
  "permissions": [
    "storage",
    "activeTab",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options/index.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/engine.js", "content/ui.js", "content/main.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["options/index.html", "options/main.js", "options/style.css"],
      "matches": ["<all_urls>"]
    }
  ]
}